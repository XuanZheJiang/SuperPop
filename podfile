platform :ios, '8.0'
use_frameworks!

def shared_pods
  pod 'SnapKit'
  pod 'SwiftyJSON'
  pod 'Alamofire'
end

target 'SuperPop' do
  shared_pods
  pod 'JPush'
  pod 'ReachabilitySwift'
  pod 'Device', '~> 3.0.0'
  pod 'Fuzi', '~> 1.0.0'  
  pod 'PKHUD', '~> 4.0'
  pod 'BTNavigationDropdownMenu', :git => 'https://github.com/PhamBaTho/BTNavigationDropdownMenu.git', :branch => 'swift-3.0'
end

target 'SuperPopToday' do
  shared_pods
end
